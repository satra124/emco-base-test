{ 
  "schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "spec": {
      "required": [
        "action",
        "url",
        "access"
      ],
      "type": "object",
      "description": "Traffic inbound clients access Intent",
      "properties": {
        "action": {
          "description": "Auth action",
          "type": "string",
          "enum": [ "ALLOW" ]
        },
        "url": {
          "description": "API url",
          "type": "string",
          "example": "/status",
          "maxLength": 4096,
          "pattern": "^([/A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
        },
        "access": {
          "description": "Access type",
          "type": "array",
          "example": ["GET", "PUT"],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "required": [
        "name"
      ],
      "properties": {
        "userData2": {
          "description": "User relevant data for the resource",
          "type": "string",
          "example": "Some more data",
          "maxLength": 512
        },
        "userData1": {
          "description": "User relevant data for the resource",
          "type": "string",
          "example": "Some data",
          "maxLength": 512
        },
        "name": {
          "description": "Name of the resource",
          "type": "string",
          "example": "ResName",
          "maxLength": 128,
          "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
        },
        "description": {
          "description": "Description for the resource",
          "type": "string",
          "example": "Resource description",
          "maxLength": 1024
        }
      }
    }
  }
}
