#Dockerfile for git-service image
ARG BASEDOCKERREPO
ARG BUILD_BASE_IMAGE_VERSION
ARG BUILD_BASE_IMAGE_NAME
FROM busybox:uclibc as busybox
FROM ${BASEDOCKERREPO}${BUILD_BASE_IMAGE_NAME}:${BUILD_BASE_IMAGE_VERSION} as baseimage

FROM gcr.io/distroless/base-debian11
WORKDIR /opt/emco
COPY --from=baseimage /project/libgit2-1.3.1/build/libgit2.so.1.3 ./
COPY --from=busybox /bin /bin